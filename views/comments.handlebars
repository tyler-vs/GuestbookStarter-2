<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">Comments</h2>
    </div>
    <div class="panel-body">
        <ul class="media-list">
            {{#each comments}}
            <li class="media">
                <div class="media-body">
                    {{ comment }}
                    <br/><strong class="media-heading">{{ timeago timestamp }}</strong>
                    <br><i class="media-heading">~ {{ name }}</i>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>